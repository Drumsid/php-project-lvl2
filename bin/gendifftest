#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$gendiff = <<<DOC
Generate diff

Usage:
  gendifftest (-h|--help)
  gendifftest (-v|--version)
  gendifftest [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: pretty]
DOC;

$params = array(
    'argv'=>array_slice($_SERVER['argv'], 1),
    'help'=>true,
    'version'=>'dev test version',
    'optionsFirst'=>false,
);

// print_r($params['argv']);
$args = Docopt::handle($gendiff, $params);

function test($firstFile, $secondFile)
{
  return $firstFile + $secondFile;
}

// var_dump($args);
// var_dump($args->args["<firstFile>"]);
// var_dump($args->args["<secondFile>"]);

print_r(test($args->args["<firstFile>"], $args->args["<secondFile>"]));
